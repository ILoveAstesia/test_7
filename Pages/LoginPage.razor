</span>
<br />

@if (LoginStatetem == true)
{
    <Button @onclick="Logout" Type="@ButtonType.Primary">Log out</Button>
}
else
{
    <Button @onclick="Login" Type="@ButtonType.Primary">Login</Button>

}
